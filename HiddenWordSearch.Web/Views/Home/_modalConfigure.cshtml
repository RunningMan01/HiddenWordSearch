<!-- Modal -->
<div class="modal fade" tabindex="-1"  id="configureModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>            
      </div>

      <div class="modal-body">
        <div class="mb-3">
            <div class="col-auto">
                <label for="wordSearchTitle" class="form-label">Title</label> 
                <input type="text" class="form-control" id="wordSearchTitle" placeholder="Word Search Title" value="my word search"/>
            </div>
            <div class="row mb-3">
                <div class="col-auto">
                    <label for="wordSearchRows" class="form-label">Rows</label>
                    <input type="number" class="form-control" id="wordSearchRows" value="10" min="5" max="15"/>
                </div>
                <div class="col-auto">
                    <label for="wordSearchCols" class="form-label">Columns</label>
                    <input type="number" class="form-control" id="wordSearchCols" value="10" min="5" max="15"/>
                </div>
            </div>
            <div class="mb-3">
                <label for="wordSearchWords" class="form-label">Words</label>
                <textarea class="form-control" id="wordSearchWords" rows="10">England,Wales,Scotland,Germany,France,Italy</textarea>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button id="buttonCreateWordsearch" type="button" class="btn btn-primary">Create Wordsearch</button>              
      </div>
    </div>
  </div>
</div>

